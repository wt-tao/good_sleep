<view class='div2'>
     <view class='list_tit flex'>
        <view class='list_icon'></view>
        <view class='tit_name'>订单详情</view>
    </view>
    <view class='sp flex'>
        <view class='sp_img'></view>
        <view class='sp_info'>
            <view class='info_name'>泰国纯天然乳胶枕头狼牙乳胶枕天然按摩枕记忆枕水电费水电费是大法官</view>
            <view class='info_ flex'>
                <view class='money'>￥160.00</view>
