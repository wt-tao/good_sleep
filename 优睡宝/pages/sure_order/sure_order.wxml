<view class='bnutt flex'>
    <view class='bt_left'>总计:<text style='color:#FA5509'>￥160.00</text></view>
    <view class='bu_an' bindtap='ljzf'>立即支付</view>
</view>


<block wx:if='{{sort}}'>
<view class="bg" bindtap='bindSorttap'></view>
<view class="show" >
   <view class='show_tit flex'>
      <image src='../../img/gb.png' style='width:30rpx;margin-left:20rpx;margin-top:25rpx;' mode='widthFix' bindtap='bindSorttap'/>
      <view class='show_tit_text'>支付选项</view>
   </view>
   <view class='title'>订单金额</view>
   <view class='show_money'>￥168.00</view>
   <view class='icon_ flex'>
        <image src='../../img/wxzf.png' style='width:50rpx;margin-left:25rpx;margin-top:30rpx;' mode='widthFix'/>
        <view class='icon_text'>微信</view>
        <image src='../../img/xz-1.png' style='width:40rpx;margin-top:30rpx;' mode='widthFix'/>
   </view>
   <view class='anniu' bindtap='pay'>支付￥168.00</view>
</view>
</block>